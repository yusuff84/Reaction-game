<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowFullscreen="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_stroke_blak_press"
                    android:rotation="180"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/back_shape"
                    android:textAlignment="center"
                    android:textColor="@color/black_95"
                    android:textSize="34sp"
                    android:onClick="backButton"/>

                <TextView
                    android:id="@+id/game_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/gameTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/back_shape"
                    android:textAlignment="textEnd"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/numbers_view"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/style_btn_stroke_red"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="######"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="64dp" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/TableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_n1"
                        android:layout_width="50dp"

                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="1"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                    <Button
                        android:id="@+id/button_n2"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="2"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                    <Button
                        android:id="@+id/button_n3"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="3"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/TableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/button_n4"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="4"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                    <Button
                        android:id="@+id/button_n5"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="5"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                    <Button
                        android:id="@+id/button_n6"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="6"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_n7"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="7"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                    <Button
                        android:id="@+id/button_n8"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="8"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                    <Button
                        android:id="@+id/button_n9"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stroke_blak_press"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="9"
                        android:textColor="@color/black_95"
                        android:textSize="54dp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>